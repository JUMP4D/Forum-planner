{% extends 'base.html.twig' %}

{% block title %}Stand{% endblock %}

{% block body %}
    <h1>Stand</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ stand.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ stand.title }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>
                    {% for evaluation in stand.evaluations %}
                        {{ evaluation.note }}<br>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Note moyenne</th>
                <td>{{ stand.getAverageNote }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ stand.picture }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ stand.description }}</td>
            </tr>
            <tr>
                <th>Capacity</th>
                <td>{{ stand.capacity }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ stand.duration ? stand.duration|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <h3>Ajouter une note </h3>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn">{{ button_label|default('Ajouter') }}</button>
    {{ form_end(form) }}
    <br>
    <a href="{{ path('app_stand_index') }}">back to list</a>

    <a href="{{ path('app_stand_edit', {'id': stand.id}) }}">edit</a>

    {{ include('stand/_delete_form.html.twig') }}
{% endblock %}
